<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <item name="dynamicColorThemeOverlay">@style/ThemeOverlay.Material3.DynamicColors.Light</item>
    </style>

    <style name="ColorThemeOverlay" />

    <style name="ColorThemeOverlay.Orange">
        <item name="colorPrimary">@color/orange</item>
    </style>
</resources>